<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Art Collections</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Sticky navbar */
    .sticky-top {
      position: -webkit-sticky;
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    /* Customizing the navbar */
    .navbar-custom {
      background-color: #002f6c; /* Dark blue background */
      padding: 1rem;
    }

    /* Navbar links */
    .navbar-custom .nav-link {
      color: white;
    }

    .navbar-custom .nav-link:hover {
      color: #00ffcc; /* Slight greenish hover effect */
    }

    .navbar-custom .dropdown-toggle::after {
      margin-left: 0.5rem;
    }

    /* Image in the navbar (e.g., flag) */
    .navbar-custom .navbar-brand img {
      height: 20px;
      width: auto;
    }

    /* Margin between login and register buttons */
    .navbar-custom .btn-register {
      margin-left: 10px;
    }

    /* Custom colors for buttons */
    .btn-login {
      background-color: #007bff;
      color: white;
    }

    .btn-register {
      background-color: #28a745;
      color: white;
    }

    /* Search form styling */
    .search-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 10px;
    }

    .search-container input {
      margin-right: 10px;
      flex: 1;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
    <a class="navbar-brand" href="#">
      <img src="../asset/logo.png" alt="FlyingCard">
      Flying card
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="helpDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Help
          </a>
          <div class="dropdown-menu" aria-labelledby="helpDropdown">
            <a class="dropdown-item" href="#">FAQ</a>
            <a class="dropdown-item" href="#">Contact Us</a>
          </div>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Booking</a>
        </li>
        <li class="nav-item">
            <a href="#"><button class="btn btn-login">Login</button></a>
        </li>
        <li class="nav-item">
            <a href="#"><button class="btn btn-register">Register</button></a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Search functionality similar to the image -->
  <div class="container search-container">
    <input type="text" class="form-control" placeholder="Dari" value="Jakarta (JKTA)">
    <input type="text" class="form-control" placeholder="Ke" value="Padang (PDG)">
    <input type="date" class="form-control" value="2024-09-12">
    <input type="date" class="form-control" value="2024-09-14">
    <button class="btn btn-primary">Search</button>
  </div>

  <!-- Rest of the content (your page) -->
  <div class="container mt-4">
    <!-- Header -->
    <h2 class="mb-4"><a href="/">Flight Ticket</a></h2>

    <!-- Art Collections -->
    <div class="row">
      <!-- First Art Item -->
      <tbody>
            <% flights.forEach(el => { %>
                <div class="col-md-6">
                  <div class="card mb-4">
                    <img src= "<%= el.imageURL %>" class="card-img-top" alt="gambar">
                    <div class="card-body">
                      <h5 class="card-title"><%= el.airlineName %></h5>
                      <button onclick="location.href='/arts/'" class="btn btn-primary">See Detail</button>
                    </div>
                  </div>
                </div>
            <% }) %>
      </tbody>
    </div>
  </div>

  <!-- Bootstrap JavaScript and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
